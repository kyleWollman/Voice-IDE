<!--Nav Bar -->
<div class="w3-bar lightBlueBG innerWhite">
  <span class="w3-bar-item w3-center w3-xlarge">VIDE</span>
  <a href="#" id="save-file" class="w3-bar-item w3-button"><i class="material-icons" style="font-size:36px">save</i></a>
  <a href="#" id="build-source" class="w3-bar-item w3-button"><i class="material-icons" style="font-size:36px">play_circle_filled</i></a>
  <a href="/logout" class="w3-bar-item w3-button w3-right"><i class="material-icons" style="font-size:36px">exit_to_app</i></a>
</div>

<div id="ide" class="container-fluid">
  <div class="row">

    <!--File Tree Column-->
    <div class="col-2 nopadding">
      <div class="file-tree">
	<div class = "w3-panel w3-center">
	 <img src="{{profilePic}}" id="profilePic"> 
          <div id="displayName"><p>{{ project }}</p></div>
	</div>
        <div class = "w3panel c3-center" id="tree" data-root-path="{{ root_path }}" data-namespace="{{ namespace }}" data-project="{{ project }}"></div>
      </div>
    <!--Tutorials-->
    <div class = "w3-panel w3-center">
		<div class="w3-bar darkGold">
			<div class="w3-bar-item"><i class="fa fa-book" style="font-size:24px"></i></div>
			<div class="w3-bar-item"><span class="w3-large" style="font-weight: bold">Tutorial</span></div>

		</div>
		<ul class = "w3-ul w3-border">

			<div class="hwTut">
				<li id="bTut">Basic Tutorial</li>
				<span class="hwText">Learn the basics of file creation and printing.</span>
			</div>
		</ul>
    </div>
    <!--Voice Commands-->
    <div class = "w3-panel w3-center">
		<div class="w3-bar darkGold">
			<div class="w3-bar-item"><i class="fa fa-commenting" style="font-size:24px"></i></div>
			<div class="w3-bar-item w3-right"><span class="w3-medium" style="font-weight: bold">Commands</span></div>

		</div>
		
		<ul class = "w3-ul w3-border w3-small w3-hoverable commands">
			<li id="command1" onclick="sendDialogFlow(innerHTML)"> Create a file </li>
			<li id="command2" onclick="sendDialogFlow(innerHTML)"> Delete a file </li>
			<li id="command3" onclick="sendDialogFlow(innerHTML)"> Save file </li>
			<li id="command4" onclick="sendDialogFlow(innerHTML)"> Add a variable </li>
			<li id="command16" onclick="sendDialogFlow(innerHTML)"> Add an if statement </li>
			<li id="command17" onclick="sendDialogFlow(innerHTML)"> Add an else if statement </li>
			<li id="command5" onclick="sendDialogFlow(innerHTML)"> Add an else statement </li>
			<li id="command6" onclick="sendDialogFlow(innerHTML)"> Add a while loop </li>
			<li id="command7" onclick="sendDialogFlow(innerHTML)"> Add a for loop </li>
			<li id="command8" onclick="sendDialogFlow(innerHTML)"> Change files </li>
			<li id="command9" onclick="sendDialogFlow(innerHTML)"> Compile the file </li>
			<li id="command10" onclick="sendDialogFlow(innerHTML)"> Add include statement </li>
			<li id="command11" onclick="sendDialogFlow(innerHTML)"> Move the cursor </li>
			<li id="command12" onclick="sendDialogFlow(innerHTML)"> Add new line </li>
			<li id="command14" onclick="sendDialogFlow(innerHTML)"> Remove a line </li>
			<li id="command15" onclick="sendDialogFlow(innerHTML)"> Add a command </li>
			<li id="command18" onclick="sendDialogFlow(innerHTML)"> Print </li>
		</ul>
    </div>
    </div>
   
    <!--Editor & Terminal Column -->
    <div class="col-8 nopadding">
      <div id="editor-container">
        <div id="editor"></div>
      </div>

      <div id="terminal" data-aquarius-domain="{{ aquarius_domain }}" data-aquarius-port="{{ aquarius_port }}"></div>
    </div>

    <!--Chat Column -->
    <div class="col-2 nopadding">

      <div id="chat-box" data-display-name="{{ display_name }}">
        <div id="chat-history-container">
          <ul id="chat-history"></ul>
        </div>

        <audio></audio>

        <div id="chat-message-form-container">
          <div class = "w3-panel w3-center">
                  <button class="w3-button w3-padding-small darkGoldBG innerWhite" id="recorder">
                    Record
                  </button>
               
                  <button class="w3-button w3-padding-small darkGoldBG innerWhite" id="erase-chat-log">
                    Clear History
                  </button>
          </div>
	  <div class = "w3-row">  
                  <form id="message-form" action="#">
                    <textarea placeholder="Optional Typing Input..." id="message-input"></textarea>
                  </form>
         	<div class = "w3-center"> 
          	<button class="w3-button w3-padding-small w3-center darkGoldBG innerWhite" id="message-submit">
                    Send
          	</button>
		</div>
	  </div>
        </div>

      </div>

    </div>
  </div>
</div>

<!--Footer -->
<div class = "w3-bar lightBlueBG innerWhite">
  <span class = "w3-bar-item w3-center">VIDE</span>
</div>
